<GerenciadorDeTelas>:
    MenuInicial:
        name:'menu_inicial'
    TelaPersonal:
        name:'tela_personal'

<MenuInicial>:
    BoxLayout:
        orientation:'horizontal'
        padding:90
        Button:
            background_normal:'img.jpg'
            #on_release:app.root.current =''
        BoxLayout:
            orientation:'vertical'
            padding:40
            spacing:20
            Button:
                text:'Personal'
                font_size:'23sp'
                bold: True
                font_name: 'Roboto-Bold'
                color:(1.1, 1.1, 1.4, 1)
                background_color: (1.0, 1.2, 1.3, 5.0)
                #background_normal:'img.jpg'
                on_release:app.root.current ='tela_personal'
            Button:
                text:'Assistente'
                font_size:'23sp'
                bold: True
                font_name: 'Roboto-Bold'
                color:(1.2, 1.3, 1.4, 1)
                background_color: (2.0, 2.2, 1.1, 5.0)
            Button:
                text:'Sair'
                font_size:'23sp'
                bold: True
                font_name: 'Roboto-Bold'
                color:(1.2, 1.2, 0.3, 1)
                background_color: (2.0, 1.3, 1.1, 5.0)
                on_release:app.stop()
<TelaPersonal>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Tarefas'
                    on_release:app.root.current = 'menu_inicial'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()
                ActionSeparator:
                ActionButton:
                    text:'Mais'     
        BoxLayout:
            orientation:'horizontal'
            padding:40
            spacing:20
            canvas.before:
                Color:
                    rgba: 0.4, 0.2, 0.2, 0.2
                Rectangle:
                    # self here refers to the widget i.e FloatLayout
                    pos: self.pos
                    size: self.size
            Label:
                text:'Seu Personal'
                font_size:'33sp'
                color:(1.6, 1.7, 1.6, 1.5)
                bold: True
                font_name: 'Roboto-Bold'
        
            BoxLayout:
                orientation:'vertical'
                padding:40
                spacing:20
                Button:
                    text:'Iniciar Treino'
                    font_size:'23sp'
                    color:(3.8, 4.8, 2.8, 2.8)
                    border:0,0,0,0
                    bold: True
                    font_name: 'Roboto-Bold'
                Button:
                    text:'Escolher Serie'
                    font_size:'23sp'
                    color:(3.8, 4.8, 2.8, 2.8)
                    border:0,0,0,0
                    bold: True
                    font_name: 'Roboto-Bold'
                Button:
                    text:'Desempenho'
                    font_size:'23sp'
                    color:(3.8, 4.8, 2.8, 2.8)
                    border:0,0,0,0
                    bold: True
                    font_name: 'Roboto-Bold'
                