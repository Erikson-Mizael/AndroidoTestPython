<Gerenciador_De_Telas>:
    Tela_Principal:
        name:'tela_principal'

<Caixa@BoxLayout>:
    orientation:'vertical'
    padding: [10,15,10,10]
    canvas.before:
        Color:
            rgba: 0.7, 0.2, 0.1, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

<Caixa_Dentro@BoxLayout>:
    orientation:'horizontal'
    padding: [10,15,10,10]
    canvas.before:
        Color:
            rgba: 0.1, 0.5, 0.2, 0.3
        Rectangle:
            pos: self.pos
            size: self.size
<Tabela@GridLayout>:
    cols:3
    spacing:15

<B_Estilizado@Button>:
    text:'Roboto-Bold'
    color: [0.9,0.9,0.3,0.9]
    font_size: '30sp'
<Letras@Label>:
    text:'Roboto-Bold'
    font_size: '30sp'
    color: [0.9,0.3,0.1,0.9]

<Tela_Principal>:
    Caixa:
        Caixa_Dentro:
            Caixa_Dentro:
                Letras:
                    text:''
                    id:pedido
            Caixa_Dentro:
                Letras:
                    text:''
                    id:escolha
            Caixa_Dentro:
                orientation:'vertical'
                Button:
                    text:'Erikson'
                Button:
                    text:'Erikson' 
                Letras:
                    text:''
                    font_size: '30sp'
                    id:pastel       
        Tabela:
            B_Estilizado:
                text:'1'
                on_press:root.pedido_numero('0','0','1')
            B_Estilizado:
                text:'2'
                on_press:root.pedido_numero('0','0','2')
            B_Estilizado:
                text:'3'
                on_press:root.pedido_numero('0','0','3')
            B_Estilizado:
                text:'4'
                on_press:root.pedido_numero('0','0','4')
            B_Estilizado:
                text:'5'
                on_press:root.pedido_numero('0','0','5')
            B_Estilizado:
                text:'6'
                on_press:root.pedido_numero('0','0','6')
            B_Estilizado:
                text:'7'
                on_press:root.pedido_numero('0','0','7')
            B_Estilizado:
